@{
    ViewData["Title"] = "УСТАНОВКА ФИАС";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var session = Guid.NewGuid();
}

<h1>УСТАНОВКА ФИАС</h1>

<form id="form" name="form" method="post" enctype="multipart/form-data">
    <label>ПОЛНАЯ БД ФИАС:</label><br/>
    <input type="file" id="file" name="file"/><br/><br/>
    <input type="hidden" id="session" name="session" value="@session"/>
    <button type="button" class="btn btn-info" onclick="uploadForm('form');">Отправить</button>
</form>

<div class="progress">
    <div id="progress" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
        <div id="label" class="control-label">0%</div>
    </div>
</div>

<script type="text/javascript" charset="utf-8">
    function uploadForm(formId) {
        var form = document.getElementById(formId);
        var formData = new FormData();
        var file = document.getElementById("file");
        var session = document.getElementById("session");
        formData.append("file", file.files[0]);
        formData.append("session", session.value);

        $.ajax(
            {
                url: "/Manager/Install",
                data: formData,
                processData: false,
                contentType: false,
                type: "POST",
                success: function(data) {
                    alert("Complete");
                }
            }
        );
    };

    var hubConnection = new signalR.HubConnectionBuilder()
        .withUrl("/progress")
        .build();

    hubConnection.on("Progress",
        function (progress, session) {
            if (session == '@session') {
                $("#progress").css({ width: progress + "%" });
                $("#label").html(progress.toFixed(1) + "%");
            }
        });

    hubConnection.start();

</script>